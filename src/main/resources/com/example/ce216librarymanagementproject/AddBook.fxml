<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce216librarymanagementproject.MainController">
   <children>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="titleid" alignment="CENTER" promptText="Title" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="subtitleid" alignment="CENTER" promptText="Subtitle" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="translatorid" alignment="CENTER" promptText="Translator" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="authorsid" alignment="CENTER" promptText="Authors" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="publisherid" alignment="CENTER" promptText="Publisher" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="dateid" alignment="CENTER" promptText="Date" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="isbnid" alignment="CENTER" promptText="ISBN" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="coverid" alignment="CENTER" promptText="Cover" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="langid" alignment="CENTER" promptText="Languages" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="categoryid" alignment="CENTER" promptText="Category" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="editionid" alignment="CENTER" promptText="Edition" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="ratingid" alignment="CENTER" promptText="Rating" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextField fx:id="tagsid" alignment="CENTER" promptText="Tags" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" fillHeight="false">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Button mnemonicParsing="false" onAction="#handleSelectImage" prefHeight="221.0" prefWidth="230.0">
                     <graphic>
                        <ImageView fx:id="bookImageView" fitHeight="247.0" fitWidth="194.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="add_back" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#switchToMainPage" prefHeight="65.0" prefWidth="105.0" text="BACK" textAlignment="CENTER" />
                  <Button fx:id="addbutton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addButton" prefHeight="65.0" prefWidth="105.0" text="ADD" textAlignment="CENTER" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
